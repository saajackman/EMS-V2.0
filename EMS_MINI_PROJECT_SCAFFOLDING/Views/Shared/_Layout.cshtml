<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Employee Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-image:url('/Content/HappyEmp.jpg'); color:white; background-repeat: no-repeat; background-size:cover; ">
        <div class="navbar navbar-inverse navbar-fixed-top" style="color:black; font-weight: bold; background-color:#383838;">
            <div class="container">
                <div class="navbar-header">
                 
                    @Html.ActionLink("Employee Management System", "UserDashboard", "Login", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Department", "Index", "Department")</li>
                        <li>@Html.ActionLink("Employee", "Index", "Employee")</li>
                        <li>@Html.ActionLink("Grade", "Index", "GradeMaster")</li>
                        <li>@Html.ActionLink("User", "Index", "UserMaster")</li>
                        <li>@Html.ActionLink("Home", "UserDashBoard", "Login")</li>
                        <li style="margin-left: 219px; margin-top: 6px;color:silver;">
                            <h5 >Welcome!&nbsp;<b>@Session["UserName"]</b></h5>
                        </li>

                    </ul>
                    <div class="bottom-right" style="float:right; margin-top: 14px;">
                      
                        @Html.ActionLink("Logout", "Logout", ViewContext.RouteData.Values["controller"] as String)
                    </div>

                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            
            <footer style=" bottom: 0; position:fixed;">
                <hr />
                <p>&copy; @DateTime.Now.Year All Rights Reserved</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

</body>
</html>
